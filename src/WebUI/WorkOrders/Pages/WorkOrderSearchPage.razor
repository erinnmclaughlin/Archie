@page "/work-orders"

@if (WorkOrders == null)
{
    <Loading />
}
else
{
    <PageTitle>Archie - Work Order Search</PageTitle>

    <PageTemplate>
        <HeaderContent>
            <Breadcrumbs>
                <Breadcrumb><a href="/">Home</a></Breadcrumb>
                <Breadcrumb>Work Orders</Breadcrumb>
            </Breadcrumbs>

            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4 class="mb-0">Work Order Search</h4>
                <button class="btn btn-success btn-sm">New Work Order</button>
            </div>
        </HeaderContent>
        <ChildContent>
            @if (!WorkOrders.Any())
            {
                <p>None found.</p>
            }
            else
            {
                <div class="list-group">
                    @foreach (var workOrder in WorkOrders)
                    {
                        <a href="work-orders/@workOrder.Id" class="list-group-item list-group-item-action">
                            @workOrder.ReferenceNumber
                        </a>
                    }
                </div>
            }
        </ChildContent>
    </PageTemplate>
}