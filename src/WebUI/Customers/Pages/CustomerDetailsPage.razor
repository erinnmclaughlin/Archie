@page "/customers/{Id:long}"
@using Archie.WebUI.Customers.Components

<PageTitle>Archie - Customer Details</PageTitle>

<section class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="#">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a href="customers">Customers</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Details</li>
        </ol>
    </nav>

    <header class="d-flex justify-content-between align-items-center mb-3">
        <h3>Customer Details</h3>
        <button class="btn btn-primary btn-sm" disabled="@(Customer == null)" @onclick="LaunchUpdateDialog">Edit Customer</button>
    </header>

    @if (Customer == null)
    {
        <Loading />
    }
    else
    {
        <dl>
            <dt>Company Name</dt>
            <dd>@Customer.CompanyName</dd>

            <dt>Location</dt>
            <dd>@Customer.Location</dd>
        </dl>

        <CustomerAuditTrail @ref="AuditTrail" CustomerId="Id" />
    }
</section>
