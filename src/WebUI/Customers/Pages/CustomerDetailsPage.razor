@page "/customers/{Id:long}"
@using Archie.WebUI.Customers.Components

@if (Customer == null)
{
    <section class="container-fluid">
        <Loading />
    </section>
}
else
{
    <PageTitle>Archie - Customer Details</PageTitle>

    <PageTemplate>
        <HeaderContent>
            <Breadcrumbs>
                <Breadcrumb><a href="/">Home</a></Breadcrumb>
                <Breadcrumb><a href="customers">Customers</a></Breadcrumb>
                <Breadcrumb>Details</Breadcrumb>
            </Breadcrumbs>

            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <h4 class="mb-0">@Customer.CompanyName</h4>
                    <p class="text-muted mb-0">@Customer.Location.ToString()</p>
                </div>
                <button class="btn btn-primary btn-sm" disabled="@(Customer == null)" @onclick="LaunchUpdateDialog">Edit Customer</button>
            </div>
        </HeaderContent>
        <ChildContent>
            <CustomerAuditTrail @ref="AuditTrail" CustomerId="Id" />
        </ChildContent>
    </PageTemplate>
}
