@page "/customers"

@if (Customers == null)
{
    <Loading />
}
else
{
    <PageTemplate Title="Customers" Icon="fa-solid fa-building">
        <BreadcrumbContent>
            <Breadcrumb><a href="/">Home</a></Breadcrumb>
            <Breadcrumb>Customers</Breadcrumb>
        </BreadcrumbContent>
        <HeaderButtons>
            <button class="btn btn-primary btn-sm" @onclick="LaunchCreateDialog">New Customer</button>
        </HeaderButtons>
        <MainContent>
            @if (!Customers.Any())
            {
                <p>None found.</p>
            }
            else
            {
                <div class="list-group">
                    @foreach (var customer in Customers)
                    {
                        <a href="customers/@customer.Id" class="list-group-item list-group-item-action">
                            <h6 class="mb-0 text-primary">@customer.CompanyName</h6>
                            <small class="text-muted">@customer.Location</small>
                        </a>
                    }
                </div>
            }
        </MainContent>
    </PageTemplate>
}
